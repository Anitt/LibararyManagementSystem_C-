
@model Dashboard_LibraryManagement.Models.DashBoardViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row" style="text-align:center">
        <div class="col-md-12">

            <div class="btn-group btn-group-lg">

                
                <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("ListBooktranscation", "Book")'">Issue Book</button>
                <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("ListBooktranscation", "Book")'">Renew Book</button>

                <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("AddMember", "Member")'">Add Member</button>
                <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("ListMember", "Member")'">Edit Member</button>
				@if (ViewBag.IsAdmin != null && ViewBag.IsAdmin == true)
				{
				<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("AddBook", "Book")'">Add Book</button>
				<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("ListUser", "Account")'">Add Admin</button>
				}
            </div>
        </div>
    </div>
    <div class="container-fluid" style="margin-top:35px">


        <div class="row">
            <a>
                <div class="col-md-4" data-toggle="#bookIssued">
                    <div class="panel panel-success">
                        <div class="panel-heading"><strong> Books Issued</strong></div>
                        <div class="panel-body"><h1>@Model.countIssued</h1></div>
                    </div>
                </div>
            </a>


            <div class="col-md-4" data-toggle="#bookDueToday">
                <div class="panel panel-success">
                    <div class="panel-heading"><strong>Books Due Today</strong></div>
                    <div class="panel-body"><h1>@Model.countDuetoday</h1></div>
                </div>
            </div>


            <div class="col-md-4" data-toggle="#bookExpired">
                <div class="panel panel-danger">
                    <div class="panel-heading"><strong>Books Expired</strong></div>
                    <div class="panel-body"><h1>@Model.countexpired</h1></div>
                </div>
            </div>
        </div>


    </div>
    <h2>Books Issued</h2>
    <div id="bookIssued" class="collapse in row">
        @if (Model.booksIssued != null)
        {
            <table class="table table-striped table-hover" style="margin-top:30px">
                <tr>
                    <th>
                        <label>Book ID</label>
                    </th>
                    <th>
                        <label>Member ID</label>
                    </th>
                    <th>
                        <label>Book Status</label>
                    </th>
                    <th>
                        <label>Date of Issue</label>
                    </th>
                    <th>
                        <label>Due Date</label>
                    </th>
                </tr>

                @foreach (var item in Model.booksIssued)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BookID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MemberID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BookStatus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateofIssue)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DueDate)
                        </td>
                    </tr>
                }

            </table>
        }
        else
        {
            <label style="font-weight:300">No data to Display</label>
        }
    </div>
    <h2>Books Due Today</h2>
    <div id="bookDueToday" class="collapse in row">
        @if (Model.booksDueToday != null && Model.booksDueToday.Count()>0)
        {
            <table class="table table-striped table-hover" style="margin-top:30px">
                <tr>
                    <th>
                        <label>Book ID</label>
                    </th>
                    <th>
                        <label>Member ID</label>
                    </th>
                    <th>
                        <label>Book Status</label>
                    </th>
                    <th>
                        <label>Date of Issue</label>
                    </th>
                    <th>
                        <label>Due Date</label>
                    </th>
                </tr>

                @foreach (var item in Model.booksDueToday)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BookID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MemberID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BookStatus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateofIssue)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DueDate)
                        </td>
                    </tr>
                }

            </table>
        }
        else
        {
            <label style="font-weight:300">No data to Display</label>
        }
    </div>
    <h2>Books Expired</h2>
    <div id="bookExpired" class="collapse in row">
        @if (Model.booksExpired != null && Model.booksExpired.Count() >0)
        {
            <table class="table table-striped table-hover" style="margin-top:30px">
                <tr>
                    <th>
                        <label>Book ID</label>
                    </th>
                    <th>
                        <label>Member ID</label>
                    </th>
                    <th>
                        <label>Book Status</label>
                    </th>
                    <th>
                        <label>Date of Issue</label>
                    </th>
                    <th>
                        <label>Due Date</label>
                    </th>
                </tr>

                @foreach (var item in Model.booksExpired)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BookID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MemberID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BookStatus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateofIssue)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DueDate)
                        </td>
                    </tr>
                }

            </table>
        }
        else
        {
            <label style="font-weight:300">No data to Display</label>
        }
    </div>



    <style>
        .panel-body {
            text-align: center;
        }

            .panel-body > h1 {
                font-weight: bolder;
                font-size: xx-large;
            }
    </style>
</div>

